<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>

	<body>

		<%- include('../partials/header2', { activePage: 'layanan' }) %>
		
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 col-12">
							<div class="row">
								<div class="col-12">
									<div class="single-main">
										<div class="d-flex justify-content-between align-items-center">
											<h1 class="news-title">
													<%= panduan.judul %>
											</h1>
												<div class="form-group button">
													<a href="https://solusiadil-apph.vercel.app/<%= panduan.isi_2.replace('public/', '') %>"
														style="margin-top: 20px; margin-left: 0px; padding: 10px; padding-left: 0; font-size: 13px;"
														type="submit" class="btn primary"><i class="fa fa-send"></i>
														Unduh Panduan</a>
														<a href="datapanduan"
														style="margin-top: 20px; margin-left: 0px; padding: 10px; padding-left: 0; font-size: 13px;"
														type="submit" class="btn primary"><i class="fa fa-send"></i>
														Kembali</a>
												</div>
										</div>
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;"><i class="fa-solid fa-calendar-days"></i>
													<%= panduan.tanggal %>
												</span>
											</div>
										</div>
										<div class="meta" style="padding: 0px; padding-bottom: 10px; background-color: black;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px; color: white;">Dasar Hukum :
													<%= panduan.undangundang %>
												</span>
											</div>
										</div>
										<div class="meta" style="padding: 0px; padding-bottom: 10px; background-color: black;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px; color: white;">Instansi/Lembaga :
													<%= panduan.nama_lai %>
												</span>
											</div>
										</div>
										<div class="meta" style="padding: 0px; padding-bottom: 10px; background-color: black;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px; color: white;">Keterangan :
													<%= panduan.keterangan %>
												</span>
											</div>
										</div>
										<div class="row">
											<div class="col-lg-12 col-md-6 col-12">
												<div class="form-group">
													<p style="color:black;  padding-bottom: 15px; font-weight: bold;">Dokumen Panduan</p>
													<div class="input-icon">
														<iframe src="https://solusiadil-apph.vercel.app/<%= panduan.isi_2.replace('public/', '') %>"
															width="1200" height="600" style="border: none;"></iframe>
													</div>
												</div>
											</div>
										</div>
										<div class="row" >
											<div class="col-lg-12 col-md-12 col-12">
												<div class="form-group message">
													<p style="color:black; padding-bottom: 15px; font-weight: bold;">Penjelasan Panduan</p>
														<p  id="formatted-dsa"></p>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<%- include('../partials/footer') %>

				<%- include('../partials/js') %>
					
				<script>
					function convertHtmlToTextWithFormatting(html) {
						const parser = new DOMParser();
						const doc = parser.parseFromString(html, 'text/html');
						return doc.body.innerHTML;
					}
					const htmlContent = `<%- panduan.isi_1 %>`;
					const formattedTextElement = document.getElementById('formatted-dsa');
					formattedTextElement.innerHTML = convertHtmlToTextWithFormatting(htmlContent);
					formattedTextElement.style.setProperty('color', 'black', 'important');
				
					console.log(window.getComputedStyle(formattedTextElement).color);
				</script>
	</body>

</html>