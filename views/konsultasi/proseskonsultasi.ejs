<!doctype html>
<html class="no-js" lang="bimamaarschal">

<%- include('../partials/head') %>

	<body>

		<%- include('../partials/header2', { activePage: 'konsultasi' }) %>

			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row"></div>
					<div class="col-lg-12 col-2">
						<div class="col-lg-12 col-12">
							<div class="row">
								<div class="col-12">
									<div class="comments-form">
										<h1 style="font-size: 18px;"><i style="font-size: 25px;"
												class="fa-solid fa-comments"></i> Konsultasi - ID <%=
												konsultasi.id_konsultasi %>
										</h1>
									</div>
								</div>
							</div>
						</div>
						<form action="/updateKonsultasi" method="POST">
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													Data Kasus Hukum dan Pengguna
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID Konsultasi</small>
														<div class="input-icon">
															<i style="padding-top: 25px;"  class="fa-solid fa-folder-closed"></i>
															<input name="id_konsultasi" type="text"
																value="<%= konsultasi.id_konsultasi %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Tanggal Pengajuan Konsultasi</small>
														<div class="input-icon">
															<i style="padding-top: 25px;" class="fa-solid fa-calendar-days"></i>
															<input id="tanggal" name="tanggal" type="text"
																value="<%= konsultasi.tanggal %>" readonly>
														</div>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Status Penanganan</small>
														<div class="input-icon">
															<i  style="padding-top: 25px; color: aliceblue;"  class="fa-solid fa-spinner"></i>
															<input style="color: aliceblue;"  id="status" name="status" type="text"
																value="<%= konsultasi.status %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Wilayah Hukum</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-map-location-dot"></i>
															<input id="wilayahhukum" name="wilayahhukum" type="text"
																value="<%= konsultasi.wilayahhukum %>" readonly>
														</div>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID Pengguna - Solusi Adil Users - Mengajukan
															Pertanyaan</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-regular fa-id-card"></i>
															<input id="id_masyarakat" name="id_masyarakat" type="text"
																value="<%= konsultasi.id_masyarakat %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Nama Penanya</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-user-tie"></i>
															<input id="nama_mast" name="nama_mast" type="text"
																value="<%= konsultasi.nama_mast %>" readonly>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													APPH - Penjawab Pertanyaan - APPH Pengguna Terverifikasi
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>ID APPH - Solusi Adil Team - Penjawab Pertanyaan</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-regular fa-id-card"></i>
															<input id="id_apph" name="id_apph" type="text"
																value="<%= konsultasi.id_apph %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-6 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Nama APPH</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-user-tie"></i>
															<input id="nama_apph" name="nama_apph" type="text"
																value="<%= konsultasi.nama_apph %>" readonly>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													<i style="font-size: 25px;" class="fa-solid fa-comments"></i>
													Pertanyaan -
													Dikonsultasikan
												</h2>
												<i style="font-size: 15px;" class="fa-solid fa-info-circle"
													title="Data tidak dapat diubah"></i>
											</div>
											<div class="row">
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group position-relative">
														<small>Pertanyaan</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-regular fa-copy"></i>
															<input id="pertanyaan" name="pertanyaan" type="text"
																value="<%= konsultasi.pertanyaan %>" readonly>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group message">
														<small>Keterangan Lanjutan</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-copy"></i>
															<textarea style="height: 120px;" name="keterangan" rows="2"
																readonly> <%= konsultasi.keterangan %> </textarea>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<h2 style="display: inline;"><i style="font-size: 25px;"
													class="fa-solid fa-scale-balanced"></i> Jawaban Hukum
											</h2> <br><br>
											<div class="row">
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Judul Konsultasi Anda</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-pen-nib"></i>
															<input id="judul" name="judul" type="text"
																value="<%= konsultasi.judul%>"
																oninput="validateJudul(this)" required readonly>
															<small id="error-message-judul"
																style="color:red; display:none;">Hanya
																Alfabet A-Z
																dan tidak lebih dari 150 karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Dasar Hukum Jawaban
															Ini</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-book"></i>
															<input id="undangundang" name="undangundang"
																value="<%= konsultasi.undangundang%>" type="text"
																oninput="validateUU(this)" required readonly>
															<small id="error-message-undangundang"
																style="color:red; display:none;">Tidak lebih dari 550
																karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group">
														<small>Referensi Studi</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-book-bookmark"></i>
															<input id="referensi" name="referensi" type="text"
																oninput="validateReferensi(this)"
																value="<%= konsultasi.referensi%>" required readonly>
															<small id="error-message-referensi"
																style="color:red; display:none;">Tidak lebih dari 550
																karakter</small>
														</div>
													</div>
												</div>
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group message">
														<small>Jawaban Penanganan dan Solusi</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-gavel"></i>
															<textarea style="height: 220px;" name="jawaban" rows="5"
																readonly
																placeholder="Tolong, pastikan kebenaran dan keakuratan jawaban berdasarkan peraturan perundang-udangan yang berlaku dan relevan"> <%= konsultasi.jawaban %> </textarea>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													<i style="font-size: 25px;" class="fa-solid fa-people-roof"></i>
													Konsultasi Langsung Dengan APPH
												</h2>
											</div>
											<div class="row">
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group message">
														<small>APPH telah Memilih Urgensi Pertemuan</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-comments"></i>
															<% if (konsultasi.calendly === 'bimamaarschal/konsultasi-hukum-1' || konsultasi.calendly === 'aospace-id/konsultasi-hukum-2') { %>
																<div class="col-lg-0 col-md-0 col-12">
																	<div class="form-group text-lg-left text-md-left text-center">
																		<div class="get-quote">
																			<a href="" class="btn" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/<%= konsultasi.calendly %>'});return false;">Pilih dan Jadwalkan Pertemuan</a>
																		</div>
																	</div>
																</div>
															<% } else { %>
																<textarea style="height: 60px;">Tidak Di Perlukan Konsultasi Lansung atau Penjadwalan Tidak Tersedia</textarea>
															<% } %>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-12 col-12">
								<div class="row">
									<div class="col-12">
										<div class="comments-form">
											<div class="d-flex justify-content-between align-items-center">
												<h2 style="display: inline;">
													<i style="font-size: 25px;" class="fa-solid fa-comments"></i>
													Tanggapan Lanjutan Anda
												</h2>
											</div>
											<div class="row">
												<div class="col-lg-12 col-md-6 col-12">
													<div class="form-group message">
														<small>Silahkan Isi Tanggapan Lanjutan Anda Berdasarkan
															Jawaban</small>
														<div class="input-icon">
															<i  style="padding-top: 25px;"  class="fa-solid fa-pen-nib"></i>
															<textarea style="height: 120px;" id="lanjutan1" name="lanjutan1" rows="3" placeholder="Isi secara detail dan tidak keluar dari topik dan jawaban hukum yang telah di berikan"><% const lanjutan1Value = (konsultasi.lanjutan1 || '').trim(); if (lanjutan1Value && lanjutan1Value !== 'Belum Tersedia' && lanjutan1Value !== 'Masih Kosong') { %><%= lanjutan1Value %><% } %></textarea>
														</div>
													</div>
												</div>
											</div>
											<div class="col-lg-0 col-md-0 col-12">
												<div class="form-group text-lg-right text-md-right text-center">
													<div class="get-quote">
														<button type="submit" class="btn">Kirim Tanggapan</button>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</section>
			<script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
			<%- include('../partials/footer') %>
			<%- include('../partials/js') %>
			<script src="function/konsultasi2.js"></script>
	</body>
</html>