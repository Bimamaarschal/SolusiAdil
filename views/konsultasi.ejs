	<!-- Single News -->
	<section class="news-single section" style="padding-top: 5px;">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-2">
					<div class="row">
						<div class="col-12">
							<div class="comments-form">
								<h1 style="font-size: 18px;"><i class="fa-solid fa-comments"></i> Layanan Konsultasi
								</h1>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-8 col-12">
					<div class="row">
						<div class="col-12">
							<div class="comments-form">
								<form class="form" action="/konsultasidata" method="POST">
									<h2 style="display: inline;">Perkara Hukum - ID Konsultasi: <input type="text"
											name="id_konsultasi" id="id_konsultasi" placeholder="Mohon Tunggu ..."
											required="required" readonly></h2>
									<!-- Contact Form -->
									<div class="row">
										<div class="col-lg-6 col-md-6 col-12">
											<div class="form-group">
												<i class="fa fa-user"></i>
												<input id="nama_mast" name="nama_mast" type="text"
													oninput="validateNama(this)" placeholder="Nama Anda"
													value="<%= nama %>" readonly>
												<small id="error-message-nama" style="color:red; display:none;">Hanya
													Alfabet A-Z
													dan tidak lebih dari 150 karakter</small>
											</div>
										</div>

										<div class="col-lg-6 col-md-6 col-12">
											<div class="form-group">
												<i class="fa fa-envelope"></i>
												<input id="id_masyarakat" name="id_masyarakat" type="text"
													placeholder=" ID Masyarakat" value="<%= id_masyarakat %>" readonly>
											</div>
										</div>
										<div class="col-12">
											<div class="form-group">
												<i class="fa-solid fa-scale-balanced"></i>
												<input type="text" name="pertanyaan"
													placeholder="Pengajuan Pertanyaan Hukum" required="required">
											</div>
										</div>
										<div class="col-12">
											<div class="form-group message">
												<i class="fa fa-pencil"></i>
												<textarea name="keterangan" rows="7"
													placeholder="Keterangan lengkap terkait perkara hukum yang Anda hadapi"></textarea>
											</div>
										</div>
										<div class="col-12">
											<div class="form-group button">
												<button type="submit" class="btn primary"><i
														class="fa fa-send"></i>Ajukan Konsultasi</button>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-4 col-12">
					<div class="main-sidebar">
						<div class="single-widget recent-post">
							<h3 class="title">Konsultasi Berproses Anda</h3>
							<% let processedCount=0; let totalProcessed=0; if (Array.isArray(konsultasiData) &&
								konsultasiData.length> 0) {
								konsultasiData.forEach(konsultasi => {
								if (processedCount < 3 && konsultasi.status==='Menunggu' ) { %>
									<div class="single-post">
										<div class="image">
											<img src="img/favicon.png" alt="#">
										</div>
										<div class="content">
											<form action="/konsultasidt" method="GET">
												<input type="hidden" name="id" value="<%= konsultasi.id_konsultasi %>">
												<h5 style="font-size: 15px;">
													<button type="submit"
														style="background:none; border:none; padding:0; font:inherit; cursor:pointer;">
														Id: <%= konsultasi.id_konsultasi %>
													</button>
												</h5>
											</form>
											<ul class="comment">
												<li><i class="fa fa-calendar" aria-hidden="true"></i>
													<%= konsultasi.tanggal %>
												</li>
												<li><i class="fa-solid fa-spinner" aria-hidden="true"></i>
													<%= konsultasi.status %>
												</li>
											</ul>
										</div>
									</div>
									<% processedCount++; totalProcessed++; } else if (konsultasi.status==='Menunggu' ) {
										totalProcessed++; } }); if (processedCount===0) { %>
										<p>Tidak ada konsultasi yang sedang diproses.</p>
										<% } else if (processedCount < totalProcessed) { %>
											<div class="see-more">
												<h2 style="font-size: 15px;"><a href="/semua-konsultasi"><br>
														Selengkapnya</a></h2>
											</div>
											<% } } else { %>
												<p>Tidak ada konsultasi yang berproses.</p>
												<% } %>
						</div>
					</div>
				</div>

				<div class="col-lg-8 col-2">
					<div class="row">
						<div class="col-12">
							<div class="comments-form">
								<h1 style="font-size: 18px;"><i class="fa-solid  fa-scale-balanced"></i> Aturan dan Kebijakan
								</h1>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-4 col-12">
					<div class="main-sidebar">
						<div class="single-widget recent-post">
							<h3 class="title">Konsultasi Selesai Anda</h3>
							<% let processedCounta=0; let totalProcesseda=0; if (Array.isArray(konsultasiData) &&
								konsultasiData.length> 0) {
								konsultasiData.forEach(konsultasi => {
								if (processedCounta < 3 && konsultasi.status==='Selesai' ) { %>
									<div class="single-post">
										<div class="image">
											<img src="img/favicon.png" alt="#">
