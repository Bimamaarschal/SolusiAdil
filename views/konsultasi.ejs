										<div class="content">
											<form action="/konsultasidt" method="GET">
												<input type="hidden" name="id" value="<%= konsultasi.id_konsultasi %>">
												<h5 style="font-size: 15px;">
													<button type="submit"
														style="background:none; border:none; padding:0; font:inherit; cursor:pointer;">
														Id: <%= konsultasi.id_konsultasi %>
													</button>
												</h5>
											</form>
											<ul class="comment">
												<li><i class="fa fa-calendar" aria-hidden="true"></i>
													<%= konsultasi.tanggal %>
												</li>
												<li><i class="fa-solid fa-spinner" aria-hidden="true"></i>
													<%= konsultasi.status %>
												</li>
											</ul>
										</div>
									</div>
									<% processedCounta++; totalProcesseda++; } else if (konsultasi.status==='Selesai' )
										{ totalProcesseda++; } }); if (processedCounta===0) { %>
										<p>Tidak ada konsultasi selesai.</p>
										<% } else if (processedCounta < totalProcesseda) { %>
											<div class="see-more">
												<h2 style="font-size: 15px;"><a href="/semua-konsultasi"><br>
														Selengkapnya</a></h2>
											</div>
											<% } } else { %>
												<p>Tidak ada konsultasi selesai.</p>
												<% } %>
						</div>
					</div>
				</div>

			</div>
		</div>
