<!doctype html>
<html class="no-js" lang="zxx">

<%- include('../partials/head') %>
	<body>
		<%- include('../partials/header2', { activePage: 'layanan' }) %>
			<section class="news-single section" style="padding-top: 5px;">
				<div class="container">
					<div class="row">
						<div class="col-lg-4 col-12">
							<div class="main-sidebar">
								<div class="single-widget recent-post">
									<h3 class="title">
										<%= aturan.id_uu %>
									</h3>
									<div class="content">
										<h5><a href="#">
												<%= aturan.jenis %> No <%= aturan.no %> Tentang <%= aturan.no %>
											</a></h5><br>
										<ul class="comment">
											<li><i class="fa-solid fa-building-columns"></i>
												<%= aturan.oleh%>
											</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-8 col-12">
							<div class="row">
								<div class="col-12">
									<div class="single-main">
										<div class="d-flex justify-content-between align-items-center">
											<h1 class="news-title">
												<%= aturan.judul %>
											</h1>
											<div class="form-group button">

												<a href="dataaturan"
													style="margin-top: 0px; margin-left: 0px; padding: 10px; padding-left: 0; font-size: 13px;"
													type="submit" class="btn primary"><i class="fa fa-send"></i>
													Kembali</a>
											</div>
										</div>
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;"><i
														class="fa-solid fa-user-tie"></i>
													<%= aturan.nama_apph %>, <%= aturan.id_apph%>
												</span>
											</div>
											<br>
										</div>
										<div class="meta" style="padding: 0px; padding-bottom: 10px;">
											<div class="meta-left" style="padding: 0px;">
												<span class="date" style="padding-left: 15px;">
													Keterangan : <%= aturan.keterangan %>
												</span>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-12">
							<div class="main-sidebar">
								<div class="single-widget recent-post">
									<div class="inner">
										<div class="single-content">
											<a href="https://solusiadil-apph.vercel.app/<%= aturan.dokumen.replace('public/', '') %>"
												style="color: black; font-size: 15px; padding-bottom: 20px; padding-right: 20px;">
												<i style=" padding-right: 5px;" class="fa-solid fa-circle-down"></i> Unduh Peraturan </a> <br>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-8 col-12">
							<div class="row">
								<div class="col-12">
									<div class="single-main">
										<h1 class="news-title" style="font-size: 15px; font-weight: bold; ">
											<i class="fa-solid fa-book-bookmark"></i> Dokumen Peraturan Hukum
										</h1>
										<div class="col-lg-12 col-md-6 col-12">
											<div class="form-group">
												<div class="input-icon">
													<iframe
														src="https://solusiadil-apph.vercel.app/<%= aturan.dokumen.replace('public/', '') %>"
														width="1200" height="600" style="border: none;"></iframe>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
			<%- include('../partials/footer') %>

				<%- include('../partials/js') %>
					<script>
						function getRandomInt(min, max) {
							min = Math.ceil(min);
							max = Math.floor(max);
							return Math.floor(Math.random() * (max - min + 1)) + min;
						}
						window.onload = function () {
							var randomNumber = getRandomInt(1, 10);
							var imgElement = document.getElementById("randomImage");
							imgElement.src = "aturan/" + randomNumber + ".png";
						}
					</script>
	</body>

</html>